<Window x:Class="IO_projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IO_projekt"
        mc:Ignorable="d"
        Title="Logowanie" Height="175" Width="240" ResizeMode="CanMinimize" FontFamily="Segoe UI">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" TextAlignment="Center" Text="Dzień dobry!" Grid.ColumnSpan="3" FontSize="22" FontFamily="Segoe UI" Margin="0, 0, 0, 5" FontWeight="DemiBold"/>
        <TextBlock Grid.Column="1" Grid.Row="2" TextAlignment="Center" Text="Login:" Margin="0,3,0,3" Width="65"/>
        <TextBox Grid.Column="2" Grid.Row="2" Margin="0,3,0,3" Width="65"/>
        <TextBlock Grid.Column="1" Grid.Row="3" TextAlignment="Center" Text="Hasło:" Margin="0,3,0,3"/>
        <TextBox Grid.Column="2" Grid.Row="3" Margin="0,3,0,3"/>
        <Button Grid.Column="1" Grid.Row="4" Content="Zaloguj" Grid.ColumnSpan="3" Margin="10"/>

    </Grid>
</Window>

<Window x:Class="IO_projekt.RentalListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IO_projekt"
        mc:Ignorable="d"
        SizeToContent="Width"
        Title="Rezerwacje" Height="450" Width="800">
    <ScrollViewer>
        <Grid>
            <DataGrid x:Name="RentalsDG" AlternatingRowBackground="AliceBlue" CanUserAddRows="False" SelectionMode="Single" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Data rezerwacji" Binding="{Binding Path=DATA_REZERWACJItext}"/>
                    <DataGridTextColumn Header="Imię" Binding="{Binding Path=NAME}"/>
                    <DataGridTextColumn Header="Nazwisko" Binding="{Binding Path=SURNAME}"/>
                    <DataGridTextColumn Header="Login" Binding="{Binding Path=LOGIN}"/>
                    <DataGridTextColumn Header="E-mail" Binding="{Binding Path=EMAIL}"/>
                    <DataGridTextColumn Header="Data urodzenia" Binding="{Binding Path=DATA_URODZENIAtext}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </ScrollViewer>
</Window>
